package com.mycompany.ejercicio3pract;
import java.util.Scanner;
/**
 *
 * @author alumno
 */
public class Ejercicio3pract {

    public static void main(String[] args) {
        
        // variABLE//
        
        int num1 ;
        double residuo;
         System.out.println("primer numero");
        Scanner scanner = new Scanner(System.in);
        num1 = scanner.nextInt();   
        
        //OPERACION//
        residuo = num1%7;
        System.out.println("residuo "   + residuo ); 
        //CONDICIONAL//
        
        if (num1 > 40 && residuo<=0  ) { System.out.println(" es divisible");       }
        
        
        
       
    }
}
